<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ThreeFourPlayground.Views.ImageButtonView"
             Title="ImageButton">
    <ContentPage.Content>
        <StackLayout>
            <ImageButton 
                x:Name="ImageButton"
                Source="{OnPlatform Icon, UWP=Assets/StoreLogo.scale-200.png}"
                CornerRadius="12"
                BorderWidth="2"
                BorderColor="DarkGray"
                BackgroundColor="Black"
                IsOpaque="True"
                Command="{Binding ImageButtonCommand}"
                CommandParameter="Test" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>