<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ThreeFourPlayground.Views.MainView"
             Title="Xamarin.Forms 3.4 Playground">
    <ContentPage.Content>
        <StackLayout>
            <Button
                Text="AutomationID Bindable"
                Command="{Binding AutomationCommand}"/>
            <Button 
                Text="ImageButton"
                Command="{Binding ImageButtonCommand}"/>
            <Button 
                Text="TabIndex"
                Command="{Binding TabIndexCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>